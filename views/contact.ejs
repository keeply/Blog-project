<%- include("partials/header"); -%>
    <h1>Напишите мне</h1>
    <p> <%= contactContent %> </p>
<!-- Создаю контакт-форму для связи -->
    <form class="col col-sm-9" action="/contact" method="post">
  <div class="form-group">
    <label>Ваш Email</label>
    <input type="text" name="inputEmail" class="form-control mx-sm-3" id="inputEmail" aria-describedby="emailHelp" placeholder="Введите ваш email">
    <small id="emailHelp" class="form-text text-muted">Я не делюсь вашим email ни с кем.</small>
  </div>
  <div class="form-group">
    <label>Ваше имя</label>
    <input type="text" name="inputName" class="form-control mx-sm-3" id="inputName" placeholder="Введите ваше имя">
  </div>

<div class="form-group">
    <label>Сообщение</label>
    <textarea class="form-control" name="inputMessage" id="inputMessage" rows="3" placeholder="Напишите мне сообщение"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Отправить</button>

</form>
<%- include("partials/footer"); -%>
